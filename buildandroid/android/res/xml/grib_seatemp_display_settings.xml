<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="grib_prefb_SeaTemperatureNumbers"
        android:title="Show Sea Temperature Values"
        android:summary=""
        android:defaultValue="false" />

    <ListPreference
        android:title="Sea Temperature Value Units"
        android:key="grib_prefs_SeaTemperatureUnits"
        android:defaultValue="0"
        android:entries="@array/GRIBTempUnits"
        android:entryValues="@array/GRIBTempUnitsVal" />

    <SwitchPreference
        android:key="grib_prefb_SeaTemperatureNumbersFixedSpacing"
        android:title="Sea Temperature Value Spacing"
        android:switchTextOff="Default"
        android:switchTextOn="Custom"
        android:defaultValue="false"
        />

    <org.opencpn.opencpn.SeekBarPreference
        android:key="grib_prefs_SeaTemperatureNumbersSpacing"
        android:title="Sea Temperature Numbers Spacing (pixels)"
        android:summary=""
        android:defaultValue="50"
        android:max="100"
        />

    <CheckBoxPreference
        android:key="grib_prefb_SeaTemperatureDisplayIsobars"
        android:title="Show Isotherms"
        android:summary=""
        android:defaultValue="false" />

    <org.opencpn.opencpn.SeekBarPreference
        android:key="grib_prefs_SeaTemperatureIsoBarSpacing"
        android:title="Isotherm Spacing (\u00B0C)"
        android:summary=""
        android:defaultValue="10"
        android:max="50"
        />

    <CheckBoxPreference
        android:key="grib_prefb_SeaTemperatureOverlayMap"
        android:title="Show Sea Temperature Overlay"
        android:summary=""
        android:defaultValue="false" />

    <ListPreference
        android:title="Sea Temperature Overlay Colors"
        android:key="grib_prefs_SeaTemperatureOverlayMapColors"
        android:defaultValue="3"
        android:entries="@array/GRIBOverlayColors"
        android:entryValues="@array/GRIBOverlayColorsVal" />

    <org.opencpn.opencpn.SeekBarPreference
        android:key="grib_prefs_OverlayTransparency"
        android:title="Overlay Transparency"
        android:summary=""
        android:defaultValue="60"
        android:max="100"
        />




</PreferenceScreen>

